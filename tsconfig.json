{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
